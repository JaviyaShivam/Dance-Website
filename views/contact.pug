extends base.pug

block script 
    script(src='/static/index.js')
block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css
block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post" class="myForm") 
            input(type="text" name="name" placeholder="Enter your name" class="myInput")
            input(type="phone" name="phone" placeholder="Enter your Phone number" class="myInput")
            input(type="email" name="email" placeholder="Enter your email id" class="myInput")
            input(type="textarea" name="adress" placeholder="Enter your Adress" class="myInput")
            input(type="textarea" name="dance_exp" placeholder="Enter your previous Dance-Experience" class="myInput")
            input(type="text" name="consern" placeholder="Enter your consern" class="myInput")
            button#btn
                |Submit